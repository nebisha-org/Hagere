# ios/Podfile

platform :ios, '15.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# ---- Locate FLUTTER_ROOT from Generated.xcconfig and require the SDK podhelper ----
generated_xcconfig = File.expand_path(File.join(__dir__, 'Flutter', 'Generated.xcconfig'))
flutter_root = nil
if File.exist?(generated_xcconfig)
  File.foreach(generated_xcconfig) do |line|
    m = line.match(/FLUTTER_ROOT=(.*)/)
    if m
      flutter_root = m[1].strip
      break
    end
  end
end
flutter_root ||= ENV['FLUTTER_ROOT']
raise "FLUTTER_ROOT not found. Make sure #{generated_xcconfig} exists or FLUTTER_ROOT is set." unless flutter_root

require File.expand_path(File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper'))

# ---- Standard Flutter iOS setup ----
flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

# Keep tests target if it exists; harmless otherwise.
target 'RunnerTests' do
  inherit! :search_paths
end

# ---- Disable codesigning for SIMULATOR builds (Runner + all Pods) ----
post_install do |installer|
  installer.pods_project.targets.each do |t|
    # âœ… Call the Flutter helper per target (fixes 'platform_name' error)
    flutter_additional_ios_build_settings(t)

    t.build_configurations.each do |config|
      # ðŸ”¥ Force all pods to use iOS 14.0
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'

      # Don't sign anything for iphonesimulator
      config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
      config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
      config.build_settings['CODE_SIGN_IDENTITY[sdk=iphonesimulator*]'] = ''
      config.build_settings['PROVISIONING_PROFILE_SPECIFIER[sdk=iphonesimulator*]'] = ''

      # (Optional) Uncomment on Intel Macs if you hit arm64-simulator issues:
      # config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
end

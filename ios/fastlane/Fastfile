# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

require "base64"
require "tmpdir"

default_platform(:ios)

def asc_api_key
  # App Store Connect API key auth (avoids Apple ID app-specific-password prompts).
  # Issuer ID provided by Nebsha:
  issuer_id = ENV["ASC_ISSUER_ID"] || "69a6de7f-dd4e-47e3-e053-5b8c7c11a4d1"
  key_id = ENV["ASC_KEY_ID"] || "6G44969CHD"
  key_path = ENV["ASC_KEY_PATH"]
  if key_path.to_s.strip.empty?
    key_content_base64 = ENV["ASC_KEY_CONTENT_BASE64"]
    key_content_plain = ENV["ASC_KEY_CONTENT"]
    if !key_content_base64.to_s.strip.empty?
      key_path = File.join(Dir.tmpdir, "AuthKey_#{key_id}.p8")
      File.write(key_path, Base64.decode64(key_content_base64))
    elsif !key_content_plain.to_s.strip.empty?
      key_path = File.join(Dir.tmpdir, "AuthKey_#{key_id}.p8")
      File.write(key_path, key_content_plain)
    else
      key_path = "/Users/nebsha/FlutterProjects/cert/AuthKey_#{key_id}.p8"
    end
  end

  app_store_connect_api_key(
    key_id: key_id,
    issuer_id: issuer_id,
    key_filepath: key_path,
    duration: 1200,
    in_house: false
  )
end

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    api_key = asc_api_key
    ci_build_number = ENV["CI_BUILD_NUMBER"]
    if ci_build_number.to_s.strip.empty?
      increment_build_number(xcodeproj: "Runner.xcodeproj")
    else
      increment_build_number(xcodeproj: "Runner.xcodeproj", build_number: ci_build_number)
    end

    bundle_id = "com.digitalnebi.allhabesha"
    profile_name = ENV["IOS_PROVISIONING_PROFILE_NAME"].to_s.strip
    team_id = ENV["IOS_DEVELOPMENT_TEAM"].to_s.strip
    build_options = {
      workspace: "Runner.xcworkspace",
      scheme: "Runner"
    }

    if !profile_name.empty?
      build_options[:export_method] = "app-store"
      build_options[:export_options] = {
        signingStyle: "manual",
        provisioningProfiles: {
          bundle_id => profile_name
        }
      }
      xcargs = [
        "CODE_SIGN_STYLE=Manual",
        "CODE_SIGN_IDENTITY='Apple Distribution'",
        "PROVISIONING_PROFILE_SPECIFIER='#{profile_name}'"
      ]
      xcargs << "DEVELOPMENT_TEAM=#{team_id}" unless team_id.empty?
      build_options[:xcargs] = xcargs.join(" ")
    end

    build_app(**build_options)

    groups =
      ENV["TESTFLIGHT_GROUPS"].to_s.split(",").map(&:strip).reject(&:empty?)
    notify_external = ENV["TESTFLIGHT_NOTIFY_EXTERNAL"].to_s == "1"
    wait_for_processing = ENV["CI_WAIT_FOR_TESTFLIGHT_PROCESSING"].to_s == "1"

    upload_options = {
      api_key: api_key,
      skip_waiting_for_build_processing: !wait_for_processing
    }
    if groups.any?
      upload_options[:groups] = groups
      upload_options[:notify_external_testers] = notify_external
    end

    upload_to_testflight(**upload_options)
  end

  desc "Upload existing Runner.ipa to TestFlight (fast)"
  lane :upload_existing_ipa do
    api_key = asc_api_key
    upload_to_testflight(
      api_key: api_key,
      ipa: "Runner.ipa",
      skip_waiting_for_build_processing: true
    )
  end

  desc "Enable Sign in with Apple capability for the app"
  lane :enable_sign_in_with_apple do
    modify_services(
      services: {
        sign_in_with_apple: "on"
      }
    )
  end

  desc "Upload App Store screenshots only (no binary/metadata upload)"
  lane :upload_screenshots_only do
    api_key = asc_api_key
    screenshots_path =
      ENV["ASC_SCREENSHOTS_PATH"] ||
      "/Users/nebsha/FlutterProjects/AllHabesha/_screenshots_automation_2026-02-12/app_store_upload/fastlane"
    app_version = ENV["ASC_APP_VERSION"] || "1.0.1"
    screenshot_timeout = (ENV["ASC_SCREENSHOT_TIMEOUT"] || "180").to_i

    upload_to_app_store(
      api_key: api_key,
      app_version: app_version,
      screenshots_path: screenshots_path,
      skip_binary_upload: true,
      skip_metadata: true,
      skip_app_version_update: true,
      overwrite_screenshots: true,
      run_precheck_before_submit: false,
      screenshot_processing_timeout: screenshot_timeout,
      force: true
    )
  end

  desc "Submit existing App Store version for review (no binary/screenshot upload)"
  lane :submit_for_review_only do
    api_key = asc_api_key
    app_version = ENV["ASC_APP_VERSION"] || "1.0.1"

    upload_to_app_store(
      api_key: api_key,
      app_version: app_version,
      skip_binary_upload: true,
      skip_screenshots: true,
      skip_metadata: true,
      skip_app_version_update: true,
      run_precheck_before_submit: false,
      submission_information: {
        export_compliance_uses_encryption: false
      },
      submit_for_review: true,
      force: true
    )
  end

  desc "Submit a specific CI-uploaded build for review"
  lane :submit_ci_build_for_review do
    api_key = asc_api_key
    app_version = ENV["ASC_APP_VERSION"]
    build_number = ENV["ASC_BUILD_NUMBER"]

    UI.user_error!("ASC_APP_VERSION is required") if app_version.to_s.strip.empty?
    UI.user_error!("ASC_BUILD_NUMBER is required") if build_number.to_s.strip.empty?

    upload_to_app_store(
      api_key: api_key,
      app_version: app_version,
      build_number: build_number,
      skip_binary_upload: true,
      skip_screenshots: true,
      skip_metadata: true,
      skip_app_version_update: true,
      run_precheck_before_submit: false,
      submission_information: {
        export_compliance_uses_encryption: false
      },
      submit_for_review: true,
      automatic_release: false,
      force: true
    )
  end
end
